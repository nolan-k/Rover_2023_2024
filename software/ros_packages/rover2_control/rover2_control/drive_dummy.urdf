<?xml version="1.0"?>
<robot name="simple_rover_drive">


  <!-- Wheel Links -->
  <link name="front_left_wheel"/>
  <link name="middle_left_wheel"/>
  <link name="back_left_wheel"/>
  <link name="front_right_wheel"/>
  <link name="middle_right_wheel"/>
  <link name="back_right_wheel"/>

  <!-- Front Left Joint -->
  <joint name="front_left" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.5 0.3 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Middle Left Joint -->
  <joint name="middle_left" type="continuous">
    <parent link="base_link"/>
    <child link="middle_left_wheel"/>
    <origin xyz="0.0 0.3 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Back Left Joint -->
  <joint name="back_left" type="continuous">
    <parent link="base_link"/>
    <child link="back_left_wheel"/>
    <origin xyz="-0.5 0.3 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Front Right Joint -->
  <joint name="front_right" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.5 -0.3 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Middle Right Joint -->
  <joint name="middle_right" type="continuous">
    <parent link="base_link"/>
    <child link="middle_right_wheel"/>
    <origin xyz="0.0 -0.3 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Back Right Joint -->
  <joint name="back_right" type="continuous">
    <parent link="base_link"/>
    <child link="back_right_wheel"/>
    <origin xyz="-0.5 -0.3 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>
